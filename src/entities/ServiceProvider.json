{
  "name": "ServiceProvider",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier"
    },
    "business_name": {
      "type": "string",
      "description": "שם העסק או שם הספק"
    },
    "contact_name": {
      "type": "string",
      "description": "שם איש הקשר"
    },
    "phone": {
      "type": "string",
      "description": "מספר טלפון"
    },
    "whatsapp": {
      "type": "string",
      "description": "מספר וואטסאפ"
    },
    "line_id": {
      "type": "string",
      "description": "Line ID (חשוב מאוד בתאילנד)"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "אימייל"
    },
    "website": {
      "type": "string",
      "description": "כתובת אתר"
    },
    "super_category": {
