      "description": "סוג השירות הספציפי"
    },
    "services": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "רשימת שירותים ספציפיים (תגיות)"
    },
    "description": {
      "type": "string",
      "description": "תיאור השירות"
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "thai",
          "english",
          "hebrew",
          "russian",
          "chinese",
          "german",
          "french"
        ]
      },
      "description": "שפות"
    },
    "location": {
      "type": "string",
      "description": "מיקום (אזור כללי)"
    },
    "latitude": {
      "type": "number",
      "description": "קו רוחב"
    },
    "longitude": {
      "type": "number",
      "description": "קו אורך"
    },
    "service_areas": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "אזורי שירות"
    },
    "price_range": {
      "type": "string",
      "enum": [
        "budget",
        "moderate",
        "premium"
      ],
      "default": "moderate",
      "description": "טווח מחירים"
    },
    "average_rating": {
      "type": "number",
      "minimum": 0,
      "maximum": 5,
      "default": 0,
      "description": "דירוג ממוצע"
    },
    "total_reviews": {
      "type": "number",
      "default": 0,
      "description": "מספר ביקורות"
    },
    "images": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "תמונות עבודות"
    },
    "available_hours": {
      "type": "string",
      "description": "שעות זמינות"
    },
    "emergency_service": {
      "type": "boolean",
      "default": false,
      "description": "שירות חירום (24/7)"
    },
    "verified": {
      "type": "boolean",
      "default": false,
      "description": "אומת על ידי מנהל"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "active",
        "inactive",
        "suspended"
      ],
      "default": "pending",
      "description": "סטטוס"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "business_name",
    "phone",
    "category",
    "super_category"
  ]
}
