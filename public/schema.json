{
  "openapi": "3.1.0",
  "info": {
    "title": "Kosmoi Brain API",
    "description": "Access company knowledge and data.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://gzjzeywhqbwppfxqkptf.supabase.co/functions/v1"
    }
  ],
  "paths": {
    "/search-knowledge": {
      "post": {
        "description": "Search the company knowledge base to find relevant information.",
        "operationId": "searchKnowledge",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SearchRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful retrieval",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SearchRequest": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "The prompt or question to search for."
          }
        },
        "required": [
          "query"
        ]
      },
      "SearchResponse": {
        "type": "object",
        "properties": {
          "documents": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}
