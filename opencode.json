  },
  "agents": {
    "plan": {
      "model": "claude-3-5-sonnet-latest",
      "prompt": ".opencode/prompts/plan.md",
      "tools": ["read_file", "search_files", "list_files", "run_command"]
    },
    "audit": {
      "model": "claude-3-5-sonnet-latest",
      "prompt": ".opencode/prompts/audit.md",
      "tools": ["read_file", "search_files", "list_files", "run_command"]
    },
    "build": {
       "prompt": ".opencode/prompts/kosmoi-system.md" 
    },
    "receptionist": {
      "model": "claude-3-5-sonnet-latest",
      "prompt": ".opencode/prompts/receptionist.md",
      "tools": ["read_file", "search_files", "run_command"]
    },
    "consultant": {
      "model": "claude-3-5-sonnet-latest",
      "prompt": ".opencode/prompts/consultant.md",
      "tools": ["read_file", "search_files", "run_command"]
    },
    "scout": {
      "model": "claude-3-5-sonnet-latest",
      "prompt": ".opencode/prompts/scout.md",
      "tools": ["read_file", "search_files", "run_command"]
    },
    "architect": {
      "model": "claude-3-5-sonnet-latest",
      "prompt": ".opencode/prompts/architect.md",
      "tools": ["read_file", "search_files", "run_command"]
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "shadcn": {
      "type": "local",
      "command": ["npx", "-y", "shadcn@latest", "mcp", "init"],
      "enabled": true
    },
    "hugeicons": {
      "type": "local",
      "command": ["npx", "-y", "hugeicons-mcp"],
      "enabled": true
    }
  }
}
