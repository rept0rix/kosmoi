{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "esnext",
    "checkJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/components/**/*.js",
    "src/components/**/*.jsx",
    "src/pages/**/*.jsx",
    "src/Layout.jsx",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/vite-plugins",
    "src/api",
    "src/lib"
  ]
}