// Assuming Stripe library is available and configured
const stripe = require('stripe')('sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX'); // Replace with actual secret key

async function createPaymentLink() {
  try {
    const product = await stripe.products.create({
      name: 'One Dollar Insight',
    });

    const price = await stripe.prices.create({
      product: product.id,
      unit_amount: 100,
      currency: 'usd',
    });

    const paymentLink = await stripe.paymentLinks.create({
      line_items: [
        {
          price: price.id,
          quantity: 1,
        },
      ],
      after_completion: {
        type: 'redirect',
        redirect: {
          url: 'https://example.com/success?session_id={CHECKOUT_SESSION_ID}', // Replace with actual success URL
        },
      },
    });

    console.log('Payment Link:', paymentLink.url);
    return paymentLink.url;
  } catch (error) {
    console.error('Error creating payment link:', error);
    return null;
  }
}

createPaymentLink().then(url => {
  if (url) {
    console.log('Payment link created successfully: ' + url);
    // You might need to store or display the URL somewhere appropriate
  } else {
    console.log('Failed to create payment link.');
  }
});
